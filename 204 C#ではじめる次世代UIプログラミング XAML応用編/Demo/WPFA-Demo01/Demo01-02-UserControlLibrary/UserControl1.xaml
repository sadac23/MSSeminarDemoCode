<UserControl x:Class="UserControlSample.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#FFF7D0F2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderBrush="#FFC3FB03" BorderThickness="10" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Button Content="UserControlのボタン"/>
        <TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="UserControlのTextBlock" FontSize="22"/>
    </Grid>
</UserControl>
