<Window x:Class="Demo04_05.BindingElementName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Slider x:Name="BindingSlider" Minimum="0" Maximum="100" Margin="5" />
        <TextBox Text="{Binding ElementName=BindingSlider,Path=Value}" FontSize="40" Margin="5" />
    </StackPanel>
</Window>
