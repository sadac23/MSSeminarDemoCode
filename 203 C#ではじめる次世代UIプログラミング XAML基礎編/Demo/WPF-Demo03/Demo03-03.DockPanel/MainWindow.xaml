        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="False">
        <Button DockPanel.Dock="Top" FontSize="20">Top</Button>
        <Button DockPanel.Dock="Left" FontSize="20">Left</Button>
        <Button DockPanel.Dock="Right" FontSize="20">Right</Button>
        <Button DockPanel.Dock="Bottom" FontSize="20">Bottom</Button>
    </DockPanel>
</Window>
