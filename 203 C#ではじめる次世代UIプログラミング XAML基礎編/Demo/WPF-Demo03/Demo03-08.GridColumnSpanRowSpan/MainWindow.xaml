<Window x:Class="Demo03_08.GridColumnSpanRowSpan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="60*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Content="Button1" FontSize="20" Grid.Column="0" Grid.Row="0" />
        <Button Content="Button2" FontSize="20" Grid.Column="1" Grid.Row="0" />
        <Button Content="Button3" FontSize="20" Grid.Column="2" Grid.Row="0" />
        <Button Content="Button4" FontSize="20" Grid.ColumnSpan="2" Grid.Row="1" />
        <Button Content="Button5" FontSize="20" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" />
    </Grid>
</Window>
